conversion galones


var galones= prompt("ingrese la cantidad de galones");

var litros=(galones/3.7854); 

document.write(litros);



conversion celcius a farenheit

var celsius= prompt("ingrese la cantidad de grados celsius");


var f=((9/5)*celsius + 32);

alert("la cantidad de grados farenheit es:"+f);




conversion  farenheit a celcius

var f= prompt("ingrese la cantidad de grados farenheit");


var celcius=(5*(f-32)/9);

alert("la cantidad de grados farenheit es:"+celcius);




conversion celcius a kelvin

var cel= prompt("ingrese la cantidad de grados celsius");
var kel=float;
var kel=cel + 273;
alert("la cantidad de grados kelvin es:");



conversion kelvin a celcius 

var kel= prompt("ingrese la cantidad de grados kelvin");
var cel=kel - 273;
alert("la cantidad de grados celcius es:"+cel);




peso en la luna


var peso= prompt("ingrese su peso");

var pesol= peso *17/100;

alert("su peso en la luna es:"+pesol);


